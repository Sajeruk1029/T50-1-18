<Page
    x:Class="AuthSys.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AuthSys"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListBox VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <ListBoxItem HorizontalContentAlignment="Center">
                <TextBlock Text="Auth"/>
            </ListBoxItem>

            <ListBoxItem>
                <TextBox x:ConnectionId='5' Name="AuthLogin" PlaceholderText="Login"/>
            </ListBoxItem>

            <ListBoxItem>
                <PasswordBox x:ConnectionId='4' Name="AuthPasswd" PlaceholderText="Password"/>
            </ListBoxItem>

            <ListBoxItem>
                <Button x:ConnectionId='3' Name="ButLogin" Content="Log in"                       />
            </ListBoxItem>

            <ListBoxItem>
                <Button x:ConnectionId='2' Name="ButReg" Content="Sign in"                     />
            </ListBoxItem>

        </ListBox>

    </Grid>
</Page>

