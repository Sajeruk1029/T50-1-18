<Page
    x:Class="AuthSys.Teacher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AuthSys"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="Teacher">
            <PivotItem Header="Control">
                <Button Name="ButAddLine" Content="Add record" Click="ButAddLine_Click" VerticalAlignment="Top"/>
            </PivotItem>
            <PivotItem Header="List">
                <ListView>
                    <ListBox Name="ListOfRecords"/>
                </ListView>
            </PivotItem>
        </Pivot>

        <Button Name="GoMainMenu" Content="Exit" Click="GoMainMenu_Click"  HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

    </Grid>
</Page>
