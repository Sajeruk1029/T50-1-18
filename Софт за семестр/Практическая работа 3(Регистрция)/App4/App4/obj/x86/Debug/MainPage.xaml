        <Button x:ConnectionId='10' x:Name="Next" Content="Следующая" Margin="300,560,0,0" VerticalAlignment="Top" Width="194"                   />
        <RadioButton x:ConnectionId='11' x:Name="Man" Content="Мужчина" Margin="277,468,0,0" VerticalAlignment="Top"/>
        <RadioButton x:ConnectionId='12' x:Name="Woman" Content="Женщина" Margin="425,468,0,0" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='13' x:Name="sobaka" HorizontalAlignment="Left" Margin="494,225,0,0" Text="@" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" FontWeight="Bold" FontSize="20"/>
        <TextBox x:ConnectionId='14' x:Name="domen" HorizontalAlignment="Left" Margin="513,225,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" AutomationProperties.HelpText="Емаил" PlaceholderText="Домен" MaxLength="20"                                  />

    </Grid>
