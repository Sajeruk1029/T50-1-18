<Page
    x:Class="Zachet_6.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zachet_6"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListBox>
            <ListBoxItem>
                <TextBox x:ConnectionId='6' Name="LineName" PlaceholderText="Имя"/>
            </ListBoxItem>

            <ListBoxItem>
                <TextBox x:ConnectionId='5' Name="LinePhone" PlaceholderText="Телефон"/>
            </ListBoxItem>

            <ListBoxItem>
                <TextBox x:ConnectionId='4' Name="LineEmail" PlaceholderText="Почта"/>
            </ListBoxItem>

            <ListBoxItem>
                <TextBox x:ConnectionId='3' Name="LineComments" PlaceholderText="Коммент"/>
            </ListBoxItem>

            <ListBoxItem>
                <Button x:ConnectionId='2' Name="SendData" Content="Оправить"                       />
            </ListBoxItem>
            
        </ListBox>
        
    </Grid>
</Page>

