<Page
    x:Class="Zachet_5.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zachet_5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot>
            <PivotItem Header="List">
                <ListBox x:ConnectionId='5' Name="ListOfTexts"/>
            </PivotItem>
            <PivotItem Header="Controls">
                <StackPanel>
                    <Button x:ConnectionId='2' Name="AddBut" Content="+"                     />
                    <Button x:ConnectionId='3' Name="RefreshBut" Content="R"                         />
                    <Button x:ConnectionId='4' Name="DeleteBut" Content="D"                        />
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

