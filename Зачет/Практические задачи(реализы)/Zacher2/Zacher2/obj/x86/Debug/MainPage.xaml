<Page
    x:Class="Zacher2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zacher2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <ListBox x:ConnectionId='2' Name="List">
            <ListBoxItem HorizontalAlignment="Center">
                <Button x:ConnectionId='8' Name="File" Content="File" Width="500" Height="50" FontSize="12dp" FontStyle="Italic" ToolTipService.ToolTip="Change a file"                   />
            </ListBoxItem>
            <ListBoxItem HorizontalAlignment="Center">
                <TextBlock x:ConnectionId='7' Name="NameMusic" Text="Name music: " FontSize="12dp" FontStyle="Italic"></TextBlock>
            </ListBoxItem>
            <ListBoxItem HorizontalAlignment="Center">
                <TextBlock x:ConnectionId='6' Name="Help" Text="Volume: " FontSize="12dp" FontStyle="Italic"/>
            </ListBoxItem>
            <ListBoxItem HorizontalAlignment="Center">
                <Slider x:ConnectionId='5' x:Name="VolumeProgress" Width="440" Height="50" Minimum="0" Maximum="100" Value="100" FlowDirection="LeftToRight" UseLayoutRounding="True" ToolTipService.ToolTip="Volume Progress"                                           />
            </ListBoxItem>
            <ListBoxItem HorizontalAlignment="Center">
                <Button x:ConnectionId='4' Name="Play" Content="Play" Width="500" Height="50" FontSize="12dp" FontStyle="Italic" HorizontalAlignment="Center" ToolTipService.ToolTip="Play"                   />
            </ListBoxItem>

        </ListBox>
        
        <MediaElement x:ConnectionId='3' Name="Player"                               />

    </Grid>

</Page>

